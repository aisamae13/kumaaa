    }                                              

    private void btnDisplayDataMouseClicked(java.awt.event.MouseEvent evt) {                                            
        // TODO add your handling code here:
        populateResultsTable();
    }                                           
private void populateResultsTable() {
    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost/mydb", "root", "");
        Statement st = con.createStatement();

        // Retrieve fullname, symptoms, temperature, and vaccination status from the database
        String sql = "SELECT usersdb.fullname, usersdbb.symptoms, usersdbb.temp, usersdbb.vaccinestat " +
                     "FROM usersdb LEFT JOIN usersdbb ON usersdb.id = usersdbb.id";
        ResultSet rs = st.executeQuery(sql);

        DefaultTableModel tblModel = (DefaultTableModel) tblViewResults.getModel();
        tblModel.setRowCount(0); // Clear existing rows

        while (rs.next()) {
            String fullname = rs.getString("fullname");
            String symptoms = rs.getString("symptoms");
            double temp = rs.getDouble("temp");
            String vaccinestat = rs.getString("vaccinestat");

            String status = determineStatus(symptoms, temp, vaccinestat);

            if (fullname != null && symptoms != null && vaccinestat != null) {
                status = determineStatus(symptoms, temp, vaccinestat);
            }

            String[] rowData = {fullname, status};
            tblModel.addRow(rowData);
        }

        rs.close();
        st.close();
        con.close();

    } catch (ClassNotFoundException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    } catch (SQLException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    }
}

private String determineStatus(String symptoms, double temp, String vaccinestat) {
    if (countSymptoms(symptoms) >= 3 && (vaccinestat.equalsIgnoreCase("UNVACCINATED")
            || vaccinestat.equalsIgnoreCase("FULLY VACCINATED")
            || vaccinestat.equalsIgnoreCase("FULLY VACCINATED WITH BOOSTER")
            || vaccinestat.equalsIgnoreCase("FIRST DOSE ONLY"))) {
        return "Positive";
    } else if ("NONE".equalsIgnoreCase(symptoms) || temp < 37.8) {
        return "Negative";
    } else {
        return "Unknown";
    }
}



private int countSymptoms(String symptoms) {
    if (symptoms != null) {
        return (int) Arrays.stream(symptoms.split(",")).count();
    }
    return 0;
}


