    private void btnDelete2ActionPerformed(java.awt.event.ActionEvent evt) {                                           
                                             
    int selectedRow = tblrecords2.getSelectedRow();

    if (selectedRow == -1) {
        JOptionPane.showMessageDialog(this, "Please select a row first");
        return;
    }

    DefaultTableModel tblModel = (DefaultTableModel) tblrecords2.getModel();
    String symptomsToDelete = tblModel.getValueAt(selectedRow, 0).toString(); // Assuming the symptoms column is the first column (index 0)

    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost/mydb", "root", "");
        String sql = "DELETE FROM usersdbb WHERE symptoms = ?";
        PreparedStatement st = con.prepareStatement(sql);
        st.setString(1, symptomsToDelete);
        st.executeUpdate();

        st.close();
        con.close();

    } catch (ClassNotFoundException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    } catch (SQLException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    }

    tblModel.removeRow(selectedRow);
    }                                          

