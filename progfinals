    private void btnShowDataActionPerformed(java.awt.event.ActionEvent evt) {                                            
                                              
    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost/mydb", "root", "");
        Statement st = con.createStatement();
        
        String sql = "SELECT * FROM usersdb";
        ResultSet rs = st.executeQuery(sql);
        
        DefaultTableModel tblModel = (DefaultTableModel) tblrecords1.getModel();
        tblModel.setRowCount(0); // Clear existing rows
        
        while (rs.next()) {
            String id = String.valueOf(rs.getInt("id"));
            String fullname = rs.getString("fullname");
            String birthday = rs.getString("birthday");
            String gender = rs.getString("gender");
            String address = rs.getString("address");
            String contactnumber = rs.getString("contactnumber");
            String height = rs.getString("height");
            String weight = rs.getString("weight");
            String emailadd = rs.getString("emailadd");
            String course = rs.getString("course");
            
            String[] rowData = {id, fullname, birthday, gender, address,contactnumber, height, weight, emailadd, course};
            tblModel.addRow(rowData);
        }
        
        rs.close();
        st.close();
        con.close();
        
    } catch (ClassNotFoundException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    } catch (SQLException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    }
       
    }                                           

    private void btnHideActionPerformed(java.awt.event.ActionEvent evt) {                                        
         DefaultTableModel tblModel = (DefaultTableModel) tblrecords1.getModel();
         tblModel.setRowCount(0); // Clear existing rows
    }                                       

    private void btnSearchActionPerformed(java.awt.event.ActionEvent evt) {                                          
                                              
    String searchInput = txtSearch.getText(); // Assuming txtSearch is the name of your search field
    
    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost/mydb", "root", "");
        Statement st = con.createStatement();

        String sql = "SELECT * FROM usersdb WHERE fullname LIKE '%" + searchInput + "%'";
        ResultSet rs = st.executeQuery(sql);

        DefaultTableModel tblModel = (DefaultTableModel) tblrecords1.getModel();
        tblModel.setRowCount(0); // Clear existing rows

        while (rs.next()) {
            String id = String.valueOf(rs.getInt("id"));
            String fullname = rs.getString("fullname");
            String birthday = rs.getString("birthday");
            String gender = rs.getString("gender");
            String address = rs.getString("address");
            String contactnumber = rs.getString("contactnumber");
            String height = rs.getString("height");
            String weight = rs.getString("weight");
            String emailadd = rs.getString("emailadd");
            String course = rs.getString("course");

            String[] rowData = {id, fullname, birthday, gender, address, contactnumber, height, weight, emailadd, course};
            tblModel.addRow(rowData);
        }

        rs.close();
        st.close();
        con.close();

    } catch (ClassNotFoundException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    } catch (SQLException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    }
    }                                         

    private void btnDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
                                                
    int selectedRow = tblrecords1.getSelectedRow();

    if (selectedRow == -1) {
        JOptionPane.showMessageDialog(this, "Please select a row first");
        return;
    }

    DefaultTableModel tblModel = (DefaultTableModel) tblrecords1.getModel();
    String idToDelete = tblModel.getValueAt(selectedRow, 0).toString(); 

    try {
        Class.forName("com.mysql.jdbc.Driver");
        Connection con = DriverManager.getConnection("jdbc:mysql://localhost/mydb", "root", "");
        Statement st = con.createStatement();

        String sql = "DELETE FROM usersdb WHERE id = " + idToDelete;
        st.executeUpdate(sql);

        st.close();
        con.close();

    } catch (ClassNotFoundException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    } catch (SQLException ex) {
        Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
    }

    tblModel.removeRow(selectedRow);


    }                                         

